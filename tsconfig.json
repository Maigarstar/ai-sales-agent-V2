{
  "compilerOptions": {
    /* =========================================================
       Core Language & Module Settings
       ========================================================= */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,

    /* =========================================================
       Type Checking & Strictness
       ========================================================= */
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,

    /* =========================================================
       Path Aliases (SINGLE SOURCE OF TRUTH)
       ========================================================= */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/app/*"],
      "@/lib/*": ["src/lib/*"],
      "@/types/*": ["types/*"],
      "@/admin/*": ["src/app/admin/*"]
    },

    /* =========================================================
       Next.js Plugin
       ========================================================= */
    "plugins": [{ "name": "next" }]
  },

  /* =========================================================
     Files & Includes
     ========================================================= */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "tailwind.config.js",
    "next.config.mjs"
  ],

  /* =========================================================
     Exclusions
     ========================================================= */
  "exclude": ["node_modules"]
}
