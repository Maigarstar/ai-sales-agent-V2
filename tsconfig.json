{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    "baseUrl": ".",

    "paths": {
      "@/*": ["app/*", "*"],

      "@/ecme/*": ["app/ecme/*"],

      "@/components/*": ["app/ecme/components/*", "app/components/*"],
      "@/utils/*": ["app/ecme/utils/*", "app/utils/*"],
      "@/configs/*": ["app/ecme/configs/*", "app/configs/*"],
      "@/constants/*": ["app/ecme/constants/*", "app/constants/*"],

      "@/@types/*": ["app/ecme/types/*"],

      "@/lib/*": ["lib/*", "app/lib/*"],
      "@/admin/*": ["app/admin/*"]
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "tailwind.config.js",
    "next.config.mjs"
, "middleware.ts-old", "app/admin/dashboard/aura/page.tsx.backup"  ],

  "exclude": ["node_modules"]
}
